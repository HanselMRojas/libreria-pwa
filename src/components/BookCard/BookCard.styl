.book {
  display flex
  min-height 300px
  flex-direction column

  &__container {
    display flex
    flex-direction column
    height 100%

    @media(min-width 900px) {
      height 300px
      flex-direction row
    }
  }

  &__img {
    width 100%
    height 300px
    display flex
    align-items center
    justify-content center

    @media(min-width 900px) {
      width 200px
      flex-direction row
      height 100%
    }
  }
  
  &__content {
    display flex
    flex-direction column
    padding 0 10px
    padding-top 20px
    width 100%

    h2 {
      margin-bottom 10px
    }

    @media(min-width 900px) {
      padding-top 0px
      width calc(100% - 200px)
    }
  }
}
