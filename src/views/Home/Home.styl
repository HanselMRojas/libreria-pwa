.slide {
  display flex
  align-items center
  justify-content center
  height calc(80vh - 90px)
  position relative

  figure {
    width 100vw
    height calc(80vh - 90px)

    .overlay {
      display flex
      background rgba(10, 10, 10, .50)
      width 100%
      position absolute
      top 0
      left 0
      height calc(80vh - 90px)
      z-index 10
    }

    img {
      width auto
      height 100%
      z-index 0

      @media (min-width 900px) {
        width 100%
        height auto
      }
    }
  }

  &__content {
    display flex
    position absolute
    flex-direction column
    align-items flex-start
    justify-content center
    height 100%
    z-index 12
    text-align left

    @media (min-width 900px) {
      text-align center
      align-items center
    }

    h1 {
      font-size 3.5rem
    }

    p {
      font-size 1.7rem
    }
  }
}
